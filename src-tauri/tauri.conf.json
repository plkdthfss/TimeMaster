{
    "$schema":  "https://schema.tauri.app/config/2",
    "productName":  "timemaster",
    "version":  "0.1.0",
    "identifier":  "com.lenovo.timemaster",
    "build":  {
                  "beforeDevCommand":  "npm run dev",
                  "devUrl":  "http://localhost:1420",
                  "beforeBuildCommand":  "npm run build",
                  "frontendDist":  "../dist"
              },
    "app":  {
                "windows":  [
                                {
                                    "label":  "main",
                                    "title":  "TimeMaster",
                                    "width":  420,
                                    "height":  720,
                                    "resizable":  false,
                                    "decorations":  false,
                                    "visible":  true,
                                    "transparent":  false
                                }
                            ],
                "security":  {
                                 "csp":  null
                             }
            },
"bundle": {
    "active": true,
    "targets": ["nsis", "app"], 
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "currentUser", 
        "headerImage": null,
        "languages": ["SimpChinese", "English"]
      }
    },
    "shortDescription": "A lightweight desktop ToDo manager built with Tauri + Vue",
    "publisher": "plkdthfs"
  }

}